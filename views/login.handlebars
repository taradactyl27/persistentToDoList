<div id="prompt" style="position:fixed; width:100%; height:100%; background-color: rgba(0, 0, 0, 0.3); z-index:2; top:0; left:0; border: solid 2px #919191;">
        <div id="center-form" style="background: #FFF;width: 19em;height: 12em;top: 0;bottom: 0;left: 0;right: 0;margin: auto;position: absolute;padding: 1em;">
        <form action="/authorize" method="POST">
            <div class=" ml-auto mr-auto mu-auto mb-auto form-group">
                <label for="content" style="font-weight:bold;">Username:</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username">
            </div>
            <button type="submit" class="mt-2 btn btn-primary">Login</button>
            <br>
            <a href="/"> Home</a> 
            <p style="color:#F00; font-weight:bold;"> {{error}} </p>
        </form>
    </div>
</div>